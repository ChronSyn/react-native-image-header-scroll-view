{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "outDir": "dist",

    "lib": [ "es6" ],
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "isolatedModules": true,

    "noEmit": true,
    "strict": true
  },
  "exclude": ["node_modules", "src/**/__tests__/*", "react-native-scrollview-animation"],
  "include": [
    "src/**/*"
  ]
}
